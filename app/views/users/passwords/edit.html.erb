<h2><%= t('views.users.passwords.edit.title') %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} #{t('views.users.passwords.edit.password_length')}" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: t('views.users.passwords.edit.password_confirmation'),
                required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('views.users.passwords.edit.submit') %>
  </div>
<% end %>

<%= render "users/shared/links" %>
